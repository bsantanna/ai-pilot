<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="software.btech.ai.pilot.imageprocessing.domain.Configuration">
    <property name="imageCaptureRepeatInterval" value="10"/>
    <property name="imageCaptureScript" value="image_capture.py"/>
    <property name="pythonScriptRoot" value="#{systemEnvironment['PYTHON_SCRIPT_ROOT']}"/>
  </bean>

</beans>
